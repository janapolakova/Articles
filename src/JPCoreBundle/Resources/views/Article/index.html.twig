{% extends 'JPCoreBundle::layout.html.twig' %}

{% block heading %}Articles{% endblock %}

{% block contextMenu %}
    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('article_create') }}"><i class="fa fa-plus"></i> Add new article</a>
    </div>
{% endblock %}

{% block content %}
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Author</th>
                <th>Date of created</th>
                <th>Last update</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td class="center">{{ loop.index }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.author }}</td>
                    <td>{{ article.dateCreated|date(date_format) }}</td>
                    <td>{{ article.dateLastUpdate|date(date_format) }}</td>
                    <td class="center">
                        <a href="{{ path('article_display', {'id' : article.id}) }}">Display</a>
                    </td>
                    <td class="center">
                        <a href="{{ path('article_update', {'id' : article.id}) }}">Edit</a>
                    </td>
                    <td class="center">
                        <a href="{{ path('article_delete', {'id' : article.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}